<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="slackHandler" xsi:type="object">Monolog\Handler\SlackHandler</item>
            </argument>
        </arguments>
    </type>

    <type name="Monolog\Handler\SlackHandler">
        <arguments>
            <argument name="token" xsi:type="string">my-token</argument>
            <argument name="username" xsi:type="string">my-username</argument>
            <argument name="channel" xsi:type="string">my-channel</argument>
        </arguments>
    </type>
</config>
